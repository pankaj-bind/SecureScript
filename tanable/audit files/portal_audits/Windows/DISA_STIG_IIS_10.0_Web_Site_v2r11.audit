      see_also          : "https://dl.dod.cyber.mil/wp-content/uploads/stigs/zip/U_MS_IIS_10-0_Y25M04_STIG.zip"
      value_type        : POLICY_TEXT
      value_data        : ""
      powershell_args   : '& $Env:SystemRoot/System32/InetSrv/appcmd.exe list vdirs /text:physicalPath | Foreach { get-childitem -recurse $_ -include \*.bak,\*.old,.\*.temp,\*.tmp,\*.backup,\\"copy of\*\\" -erroraction silentlycontinue | select FullName } | format-list'
