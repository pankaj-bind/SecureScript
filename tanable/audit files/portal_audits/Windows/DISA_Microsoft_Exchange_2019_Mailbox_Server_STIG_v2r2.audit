      see_also        : "https://dl.dod.cyber.mil/wp-content/uploads/stigs/zip/U_MS_Exchange_2019_Y25M01_STIG.zip"
      value_type      : POLICY_TEXT
      value_data      : "All policies compliant"
      powershell_args : "$settings = Get-SendConnector; $settings | Format-List Name, Identity, TlsAuthLevel; if ( $settings | where {$_.TlsAuthLevel -ne 'DomainValidation'} ) { 'Non compliant policies found' } else { 'All policies compliant' }"
      secure_string   : "@SECURE_STRING@"
      check_type      : CHECK_REGEX
    </custom_item>

