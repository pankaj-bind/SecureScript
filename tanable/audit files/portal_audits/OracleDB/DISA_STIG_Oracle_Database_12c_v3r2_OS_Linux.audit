          regex       : "^[\\s]*SQLNET\\.(CRYPTO_CHECKSUM_TYPES|CRYPTO_CHECKSUM|ENCRYPTION_TYPES)_SERVER[\\s]*="
          expect      : "^[\\s]*SQLNET\\.(CRYPTO_CHECKSUM_TYPES|CRYPTO_CHECKSUM|ENCRYPTION_TYPES)_SERVER[\\s]*="
