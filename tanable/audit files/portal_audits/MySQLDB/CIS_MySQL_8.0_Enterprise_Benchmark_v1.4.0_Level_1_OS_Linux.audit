      see_also    : "https://workbench.cisecurity.org/benchmarks/15503"
      cmd         : "/bin/grep -E MYSQL_PWD /proc/*/environ 2>&1 | /usr/bin/awk '{print} END {if (NR == 0) print \"pass\"}'"
      expect      : "(?i)^[\\s]*\\**[\\s]*pass:?[\\s]*\\**$"
    </custom_item>

