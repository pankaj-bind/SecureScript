  json_transform : '.[] | select(.appType=="RESTRICTION") | "Policy: " + .name + " - Force Encrypted Backup = " + (.properties.LOCKDOWN_FORCEENCRYPTEDBACKUP // "not defined" )'
  regex          : "Force Encrypted Backup ="
  expect         : "Force Encrypted Backup = true"
</custom_item>

