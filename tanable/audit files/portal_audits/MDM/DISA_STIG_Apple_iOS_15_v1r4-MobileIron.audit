  json_transform : '.[] | select(.active=="true") | "Policy: " + .policyName + " - Require Password = " + (.policyRules.SECURITY_REQUIRE_PWD // "not defined" )'
  regex          : "Require Password ="
  expect         : "Require Password = on"
</custom_item>

