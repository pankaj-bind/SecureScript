<check_type:"Unix">

<if>
  <condition type:"AND">
    <custom_item>
      type        : FILE_CONTENT_CHECK
      description : "Red Hat Enterprise Linux 9 is installed"
      file        : "/etc/system-release"
      regex       : "^[\\s]*Red Hat Enterprise Linux.*release"
      expect      : "^[\\s]*Red Hat Enterprise Linux.*release @PLATFORM_VERSION@"
