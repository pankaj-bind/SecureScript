          see_also    : "https://dl.dod.cyber.mil/wp-content/uploads/stigs/zip/U_CL_AlmaLinux_OS_9_V1R2_STIG.zip"
          cmd         : "/bin/gsettings get org.gnome.desktop.session idle-delay"
          expect      : "^[\\s]*uint32[\\s]*([1-9]|[1-9][0-9]|[1-8][0-9]{2}|900)[\\s]*$"
        </custom_item>
      </then>

