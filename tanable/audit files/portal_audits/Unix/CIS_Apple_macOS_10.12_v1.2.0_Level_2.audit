      cmd         : "/usr/bin/defaults read ~/Library/Preferences/com.apple.Safari.plist | /usr/bin/grep -i 'PlugInFirstVisitPolicy = *'"
      expect      : ".*= (PlugInPolicyAsk|PlugInPolicyBlock);"
    </custom_item>

