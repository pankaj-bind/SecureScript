      see_also    : "https://dl.dod.cyber.mil/wp-content/uploads/stigs/zip/U_VMW_vSphere_6-7_Y23M07_STIG.zip"
      cmd         : "/usr/bin/xmllint --format /usr/lib/vmware-vsphere-ui/server/conf/context.xml | /usr/bin/xmllint --xpath '/Context/@useHttpOnly' -"
      expect      : "^[\\s]*useHttpOnly=[\"]true[\"][\\s]*$"
