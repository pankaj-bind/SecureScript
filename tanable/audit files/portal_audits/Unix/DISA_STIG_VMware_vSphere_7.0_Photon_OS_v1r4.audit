      regex       : "^[\\s]*\\*[\\s]+hard[\\s]+maxlogins[\\s]+"
      expect      : "^[\\s]*\\*[\\s]+hard[\\s]+maxlogins[\\s]+([1-9]|10)[\\s]*$"
