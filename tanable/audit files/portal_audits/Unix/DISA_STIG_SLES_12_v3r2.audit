      expect      : "^[\\s]*NAME[\\s]*=\"[\\s]*SLES[\\s]*\"$"
    </custom_item>

    <custom_item>
      type        : FILE_CONTENT_CHECK
      description : "SUSE Linux 12 is installed - SUSE Version."
      file        : "/etc/os-release"
      regex       : "^[\\s]*VERSION[\\s]*="
      expect      : "^[\\s]*VERSION[\\s]*=\"[\\s]*@PLATFORM_VERSION@"
    </custom_item>
  </condition>

