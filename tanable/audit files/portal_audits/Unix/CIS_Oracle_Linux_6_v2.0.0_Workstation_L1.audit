      see_also    : "https://workbench.cisecurity.org/files/3152"
      file        : "/etc/ssh/sshd_config"
      regex       : "^[\\s]*ClientAliveCountMax[\\s]"
      expect      : "^[\\s]*ClientAliveCountMax[\\s]+[0-3][\\s]*$"
    </custom_item>

