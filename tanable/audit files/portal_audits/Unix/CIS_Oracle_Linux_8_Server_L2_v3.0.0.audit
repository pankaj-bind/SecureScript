      fi
   }
   module_loaded_fix()
   {
      # If the module is currently loaded, unload the module
      if lsmod | grep \"$l_mname\" > /dev/null 2>&1; then
         echo -e \"\n - unloading module \\\"$l_mname\\\"\"
         modprobe -r \"$l_mname\"
      fi
   }
