         module_deny_fix
         if [ \"$l_mdir\" = \"/lib/modules/$(uname -r)/kernel/$l_mtype\" ]; then
            module_loadable_fix
            module_loaded_fix
         fi
      else
         echo -e \"\n - module: \\\"$l_mname\\\" doesn't exist in \\\"$l_mdir\\\"\n\"
      fi
