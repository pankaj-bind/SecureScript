      cmd         : "/usr/bin/echo $(/usr/bin/xmllint --format /usr/lib/vmware-eam/web/webapps/eam/WEB-INF/web.xml | /usr/bin/sed 's/xmlns=\".*\"//g' | /usr/bin/xmllint --xpath '//param-name[text()=\"debug\"]/parent::init-param' -)"
