      see_also    : "https://dl.dod.cyber.mil/wp-content/uploads/stigs/zip/U_VMW_vSphere_6-7_Y23M07_STIG.zip"
      cmd         : "/usr/bin/echo $(/usr/bin/xmllint --format /usr/lib/vmware-eam/web/webapps/eam/WEB-INF/web.xml | /usr/bin/sed 's/xmlns=\".*\"//g' | /usr/bin/xmllint --xpath '/web-app/welcome-file-list' -)"
      expect      : "^[\\s]*<welcome-file-list>[\\s]*<welcome-file>index.jsp</welcome-file>[\\s]*</welcome-file-list>[\\s]*$"
