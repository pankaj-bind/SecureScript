      cmd         : "/usr/bin/find /var/log/vmware/eam/web/ -xdev -type f -a '(' -perm -o+w -o -not -user eam -o -not -group users ')' -exec ls -ld {} \\; | /usr/bin/awk '{print} END {if (NR == 0) print \"pass\"; else print \"fail\"}'"
