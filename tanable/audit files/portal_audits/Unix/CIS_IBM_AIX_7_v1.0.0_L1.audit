# Copyright AIXTools, 2022

EXPECT=\"usw pwd_algorithm=ssha512\"
CMD=\"lssec -f /etc/security/login.cfg -s usw -a pwd_algorithm\"

TST=$(${CMD})
[[ ${TST} == ${EXPECT} ]] && exit 0

chsec -f /etc/security/login.cfg -s usw -a pwd_algorithm=ssha512
exit $?

