      if [[ ! \"$l_user\" =~ $l_auser ]]; then
         a_out2+=(\" o Owned by: \\\"$l_user\\\" and should be owned by \\\"${l_auser//|/ or }\\\"\" \" x Changing ownership to: \\\"$l_fix_account\\\"\")
         chown \"$l_fix_account\" \"$l_fname\"
