      see_also      : "https://dl.dod.cyber.mil/wp-content/uploads/stigs/zip/U_RHEL_6_V2R2_STIG.zip"
      cmd           : "/bin/awk -F ':' '$3<500 && $1 != \"root\" {print $1\":[^!*]\"}' /etc/passwd | egrep -f /dev/stdin /etc/shadow | /bin/awk '{print} END {if (NR == 0) print \"pass\"}'"
      expect        : "pass"
      dont_echo_cmd : YES
    </custom_item>

