{
  "check_type": "CONDITIONAL",
  "condition": {
    "type": "AND",
    "rules": [
      {
        "type": "CMD_EXEC",
        "description": "check if chrony is enabled",
        "cmd": "/bin/systemctl is-enabled chrony",
        "expect": "^enabled$"
      },
      {
        "type": "CMD_EXEC",
        "description": "check if chrony is active",
        "cmd": "/bin/systemctl is-active chrony",
        "expect": "^active$"
      }
    ]
  }
}